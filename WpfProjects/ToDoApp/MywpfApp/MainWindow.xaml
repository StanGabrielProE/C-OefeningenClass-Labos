<Window x:Class="MywpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MywpfApp"
        mc:Ignorable="d" FontSize="22px"
        Title="ToDoApp" Height="450" Width="400" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="75"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Button Click="CreateToDoBtn_Click" x:Name="createToDoBtn" Grid.Row="5" Grid.Column="1" Content="Create To Do" Background="#FF313030" Foreground="WhiteSmoke"/>
        <TextBox x:Name="ToDoText" Grid.Row="3" Grid.Column="1" Background="#FF100101" Foreground="WhiteSmoke"/>
        <ScrollViewer Grid.Row="1" Grid.Column="1" VerticalScrollBarVisibility="Auto" Background="#FF313030" Foreground="WhiteSmoke">
            <StackPanel x:Name="ToDoList">
                
            </StackPanel>
        </ScrollViewer>

    </Grid>
</Window>
